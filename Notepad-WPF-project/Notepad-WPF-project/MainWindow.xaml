<Window x:Class="Notepad_WPF_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad_WPF_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textEditor" Height="296" Margin="0,23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" AcceptsReturn="True"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="517">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="browseButton_Click"></MenuItem>
                <MenuItem Header="_Save" Click="saveButton_Click"></MenuItem>
                <MenuItem Header="_Exit" Click="exitButton_Click"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
